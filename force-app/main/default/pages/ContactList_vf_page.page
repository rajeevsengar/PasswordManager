<apex:page standardController="contact" recordSetVar="contacts">
    <apex:pageBlock >
    	<apex:pageBlockTable value="{!contacts}" var="ct">
            <apex:column headerValue="First Name" value="{!ct.firstname}"/>
            <apex:column headerValue="Last Name" value="{!ct.lastname}"/>
            <apex:column headerValue="Email" value="{!ct.email}"/>
            <apex:column headerValue="Account Name" value="{!ct.Account.name}"/>
            <apex:column headerValue="Edit">
            	<apex:outputLink value="{!URLFOR($Action.Contact.Edit,ct.id)}">edit</apex:outputLink>
            </apex:column>
        </apex:pageBlockTable>
    </apex:pageBlock>
</apex:page>