<apex:page standardController="Opportunity" recordSetVar="opportunities">
    <apex:form >
         <apex:selectList value="{!filterid}" size="1">
            <apex:selectOptions value="{!listviewoptions}"/>
        </apex:selectList>
        <apex:commandButton value="Go" action="{!list}"/>
        
        <apex:pageBlock title="List Of Opportunities">
            <apex:pageBlockTable value="{!opportunities}" var="o">
                <apex:column headerValue="Name Of The Opportunity" value="{!o.name}"/>
                <apex:column headerValue="Stage Name" value="{!o.stagename}"/>
                <apex:column value="{!o.amount}"/>
                <apex:column value="{!o.closedate}"/>
                <apex:column >
                    <apex:outputLink value="{!URLFOR('$Action.Opportunity.edit',o.id)}">Edit</apex:outputLink>
                </apex:column>
            </apex:pageBlockTable>
        </apex:pageBlock>
        <apexpanelGrid columns="2">
            <apex:commandLink action="{!previous}">Previous</apex:commandLink>
            	<apex:commandLink action="{!next}">Next</apex:commandLink>
        </apexpanelGrid>
    </apex:form>
</apex:page>