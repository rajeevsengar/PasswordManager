<aura:component>

  <aura:handler name="init" value="{!this}" action="{!c.init}" />
  <aura:attribute name="selectedLabel" type="String" />
  <aura:attribute name="selectedComponent" type="String" />
  <aura:attribute name="height" type="Integer" />
  <aura:attribute name="headerSaveClicked" type="Boolean" />
  <aura:handler name="change" value="{!v.selectedComponent}" action="{!c.handleChangeItem}" />
  <aura:handler name="change" value="{!v.headerSaveClicked}" action="{!c.handleHeaderSave}" />

  <div class="slds-p-around_small myStyle" style="{! 'height:' + v.height + 'px'}">
    {!v.body}
  </div>
</aura:component>