<aura:component implements="force:appHostable,force:lightningQuickAction,flexipage:availableForAllPageTypes"
  access="global">

  <aura:attribute name="componentName" type="String" />
  <aura:attribute name="label" type="String" />
  <aura:attribute name="isHeaderSaveClicked" type="boolean" default="false" />
  <aura:attribute name="mainPageHeight" type="Integer" default="800" />
  <aura:handler name="verticalnavigationevent" event="c:PM_VerticalNavigationEvent" action="{!c.handleMenuPageEvent}" />
  <aura:handler name="headerSaveEvent" event="c:PM_HeaderSaveEvent" action="{!c.handleHeaderSaveEvent}" />

  <lightning:layout multipleRows="true">
    <lightning:layoutItem flexibility="no-grow" size="12" class="slds-p-right_xx-small slds-p-bottom_xx-small">
      <c:PM_headerHome>
      </c:PM_headerHome>
    </lightning:layoutItem>
    <lightning:layoutItem flexibility="auto" size="2" class="slds-border_right">
      <c:PM_VerticalNavigation height="{!v.mainPageHeight}">
      </c:PM_VerticalNavigation>
    </lightning:layoutItem>
    <lightning:layoutItem flexibility="auto" size="10" class="slds-p-right_xx-small">
      <c:PM_MenuPages selectedLabel="{!v.label}" selectedComponent="{!v.componentName}" height="{!v.mainPageHeight}"
        headerSaveClicked="{!v.isHeaderSaveClicked}">
      </c:PM_MenuPages>
    </lightning:layoutItem>
  </lightning:layout>
</aura:component>