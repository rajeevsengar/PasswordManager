<aura:component controller="PasswordsListController">
  <aura:attribute name="passwordsList" type="List" />
  <aura:attribute name="websiteOptions" type="List" />
  <aura:attribute name="categoryOptions" type="List" />
  <aura:handler name="init" value="{!this}" action="{!c.init}" />
  <aura:handler name="pageRefreshEvent" event="c:PM_PageRefreshEvent" action="{!c.handlePageRefreshEvent}" />
  <aura:method name="headerButtonClickedMethod" action="{!c.onButtonClicked}" access="public">
    <aura:attribute name="context" type="String" />
  </aura:method>

  <aura:if isTrue="{! !(empty(v.websiteOptions))}">
    <div class="slds-grid slds-wrap">
      <aura:iteration items="{! v.passwordsList }" var="password">
        <div class="slds-col slds-size_1-of-3 slds-p-around_x-small">
          <c:PM_PasswordForm newPassword="{! password}" websiteOptions="{! v.websiteOptions}"
            categoryOptions="{!v.categoryOptions}"></c:PM_PasswordForm>
        </div>
      </aura:iteration>
    </div>
  </aura:if>
  <lightning:spinner aura:id="mySpinner" alternativeText="Processing.." title="Processing.." variant="brand"
    size="large" class="slds-hide" />
</aura:component>